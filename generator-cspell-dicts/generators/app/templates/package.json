{
  "name": "<%= fullPackageName %>",
  "version": "1.0.0",
  "description": "<%= description %> -- Private until verified",
  "private": true,
  "bin": {
    "<%= fullPackageName %>-link": "link.js",
    "<%= fullPackageName %>-unlink": "unlink.js"
  },
  "exports": {
    ".": "./index.js",
    "./cspell-ext.json": "./cspell-ext.json"
  },
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max_old_space_size=8192 cspell-tools <%= command %> \"<%= srcFile %>\" -o .",
    "test": "head -n 100 \"<%= srcFile %>\" | cspell -v -c ./cspell-ext.json \"--local=<%= local %>\" \"--languageId=<%= languageId %>\" stdin",
    "cspell-link": "node link.js",
    "cspell-unlink": "node unlink.js",
    "prepublishOnly": "yarn t",
    "prepare": "cp ../../util/* . && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell-dicts.git"
  },
  "keywords": [
    "cspell",
    "<%= name %>",
    "<%= friendlyName %>",
    "dictionary",
    "spelling"
  ],
  "main": "index.js",
  "typings": "index.d.ts",
  "author": "Jason Dent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell-dicts/issues"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell-dicts/blob/master/packages/<%= name %>#readme",
  "devDependencies": {},
  "dependencies": {
    "configstore": "^5.0.0"
  },
  "files": [
    "<%= dstFileName %>",
    "cspell-ext.json",
    "*.js",
    "*.d.ts"
  ]
}
