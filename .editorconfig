root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yaml,yml}]
indent_size = 2

[{package*.json,lerna.json}]
indent_size = 2

[static/**/*.json]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
