{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node20",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "exactOptionalPropertyTypes": true,
        "newLine": "LF",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strict": true,
        "types": ["node"],
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src"]
}
