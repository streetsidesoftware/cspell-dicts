{
    "files": [
        "**/*.{md,txt}"
    ],
    "ignorePaths": [
        "/src/cpp.txt",
        "/src/cpp-legacy.txt",
        "dict"
    ],
    "dictionaries": [
        "cpp",
        "cpp-refined",
        "cpp-legacy",
        "cpp-compound-words"
    ],
    "import": [
        "./cspell-ext.json"
    ],
    "ignoreWords": [],
    "overrides": [
        {
            "filename": "src/**",
            "dictionaries": [
                "cpp",
                "cpp-refined",
                "cpp-compound-words",
            ]
        },
        {
            "filename": "src/cpp*.txt",
            "enabled": false
        }
    ],
    "enableFiletypes": [
        "diff"
    ]
}
